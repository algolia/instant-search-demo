{
  "name": "instant-search-demo",
  "version": "2.0.1",
  "private": true,
  "repository": "vglafirov/instant-search-demo",
  "author": "Algolia (https://www.algolia.com)",
  "license": "MIT",
  "scripts": {
    "start": "browser-sync start --server . --files 'assets/*.css,**/*.js,**/*.html' --no-open",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "npm run lint",
    "build:image": "docker build . -t ${npm_package_name}:${npm_package_version}",
    "build:push": "docker tag ${npm_package_name}:${npm_package_version} vglafirov/${npm_package_name}:${npm_package_version} && docker push vglafirov/${npm_package_name}:${npm_package_version}"
  },
  "renovate": {
    "extends": [
      "config:application",
      "schedule:weekends",
      ":automergeMinor",
      ":automergeBranchPush",
      ":semanticCommits",
      ":rebaseStalePrs",
      ":timezone(Europe/Paris)"
    ]
  },
  "homepage": "https://github.com/algolia/instant-search-demo#readme",
  "devDependencies": {
    "babel-eslint": "8.2.6",
    "browser-sync": "^2.27.10",
    "eslint": "4.19.1",
    "eslint-config-algolia": "13.4.0",
    "eslint-config-prettier": "2.10.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-prettier": "2.7.0",
    "prettier": "1.19.1"
  },
  "engines": {
    "node": "16.15.0",
    "npm": "8.11.0"
  }
}

{
  "name": "instant-search-demo",
  "version": "2.0.1",
  "private": true,
  "repository": "algolia/instant-search-demo",
  "author": "Algolia (https://www.algolia.com)",
  "license": "MIT",
  "scripts": {
    "build": "npm run build-container && npm run build-chart",
    "build-container": "podman build . -t ${docker_registry:-algolia}/$npm_package_name:$npm_package_version",
    "build-chart": "helm package ./chart --app-version $npm_package_version",
    "publish": "npm run publish-container",
    "publish-container": "podman push ${docker_registry:-algolia}/$npm_package_name:$npm_package_version",
    "deploy": "helm upgrade -i -n algolia $npm_package_name ./$npm_package_name-$(helm show chart ./chart | grep '^version:' | awk '{print $2}').tgz --create-namespace --wait",
    "start": "browser-sync start --server . --files 'assets/*.css,**/*.js,**/*.html' --no-open",
    "lint": "npm run lint-es && npm run lint-helm",
    "lint-es": "eslint .",
    "lint-helm": "helm lint ./chart",
    "lint:fix": "eslint . --fix",
    "test": "npm run lint"
  },
  "renovate": {
    "extends": [
      "config:application",
      "schedule:weekends",
      ":automergeMinor",
      ":automergeBranchPush",
      ":semanticCommits",
      ":rebaseStalePrs",
      ":timezone(Europe/Paris)"
    ]
  },
  "homepage": "https://github.com/algolia/instant-search-demo#readme",
  "devDependencies": {
    "babel-eslint": "8.2.6",
    "browser-sync": "2.26.12",
    "clean-css": "5.3.0",
    "eslint": "4.19.1",
    "eslint-config-algolia": "13.4.0",
    "eslint-config-prettier": "2.10.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-prettier": "2.7.0",
    "html-minifier-terser": "7.0.0-alpha.2",
    "prettier": "1.19.1",
    "uglify-js": "3.15.5"
  },
  "engines": {
    "node": "9.11.2",
    "npm": "5.10.0"
  }
}
